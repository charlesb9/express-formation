{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["off", "always"],
    "quotes": ["error", "single"],
    "eqeqeq": ["warn", "smart"]
  }
}
