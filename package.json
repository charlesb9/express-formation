{
  "name": "express-formation",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "npx pm2 start server.js --watch --log-date-format \"YYYY-MM-DD HH:mm Z\"",
    "stop": "npx pm2 stop server.js",
    "monit": "npx pm2 monit",
    "prettier:check": "npx prettier --check .",
    "prettier:write": "npx prettier --write .",
    "eslint:check": "npx eslint .",
    "eslint:write": "npx eslint --fix .",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --watchAll --detectOpenHandles",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jsdoc-swagger": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.8.0",
    "morgan": "^1.10.0",
    "pm2": "^5.2.2"
  },
  "devDependencies": {
    "debug": "^4.3.4",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "2.8.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
